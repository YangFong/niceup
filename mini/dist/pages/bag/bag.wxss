.bag {
  padding-bottom: 60rpx;
  background-color: #fafafa;
  height: 100vh;
}
.bag .van-submit-bar {
  bottom: 50PX;
}
.bag .van-submit-bar::before {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  top: -50%;
  right: -50%;
  bottom: -50%;
  left: -50%;
  border: 1PX solid #ebedf0;
  transform: scale(0.5);
}
.bag .van-empty .van-button {
  width: 160PX;
  height: 40PX;
}
.list {
  padding-bottom: 100PX;
  margin-top: 10PX;
}
.product-card {
  position: relative;
}
.product-card .van-card {
  background-color: white;
}
.product-card::after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 16PX;
  bottom: 0;
  left: 16PX;
  border-bottom: 1PX solid #ebedf0;
  transform: scaleY(0.5);
}
.product-card .stepper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-card .stepper .van-button {
  background-color: white;
}
.product-card .tags {
  margin: 4PX 0PX;
}

