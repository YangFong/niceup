.confirm {
  padding-bottom: 80rpx;
}
.product-card {
  position: relative;
}
.product-card .van-card {
  background-color: white;
}
.product-card .stepper {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.product-card .tags {
  margin: 4PX 0PX;
}
.product-card::after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 16PX;
  bottom: 0;
  left: 16PX;
  border-bottom: 1PX solid #ebedf0;
  transform: scaleY(0.5);
}
.list {
  padding-top: 10PX;
  background-color: #fafafa;
}
.van-cell-group__title {
  background-color: #fafafa;
}
.card-wapper_van-cell_last .van-cell {
  background-color: white !important;
}
.card-wapper_van-cell_last .van-cell::after {
  border-bottom: 0;
}
.border__bottom {
  position: relative;
}
.border__bottom::after {
  position: absolute;
  box-sizing: border-box;
  content: " ";
  pointer-events: none;
  right: 0PX;
  bottom: 0;
  left: 0PX;
  border-bottom: 1PX solid #ebedf0;
  transform: scaleY(0.5);
}

